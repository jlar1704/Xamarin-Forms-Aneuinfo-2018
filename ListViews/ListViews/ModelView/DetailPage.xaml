<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ListViews.ModelView.DetailPage" Title="Detalle del Empleado">
    <ContentPage.Content>
         <StackLayout Margin="30, 30">
            <StackLayout Orientation="Vertical" Padding="10, 0"> 
                <Image Margin="100, 0" Source="{Binding Image}" HeightRequest="150" WidthRequest="300" Aspect="AspectFill"/>
                <Label Text="Nombre:" FontSize="Medium" HorizontalOptions="FillAndExpand" />
                <Label Text="{Binding Nombre}" FontSize="Medium" FontAttributes="Bold" />
                <Label Text="Profesion:" FontSize="Medium" HorizontalOptions="FillAndExpand" />
                <Label Text="{Binding Profesion}" FontSize="Medium" FontAttributes="Bold" />
                <Label Text="Fecha Nacimiento:" FontSize="Medium" HorizontalOptions="FillAndExpand" />
                <Label Text="{Binding FechaNacimiento}" FontSize="Medium" FontAttributes="Bold" />
                 <Label Text="Sueldo :" FontSize="Medium" HorizontalOptions="FillAndExpand" />
                <Label Text="{Binding Sueldo}" FontSize="Medium" FontAttributes="Bold" />
            </StackLayout>
          </StackLayout>  
    </ContentPage.Content>
</ContentPage>
